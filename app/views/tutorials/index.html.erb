<h1>Listing Tutorials</h1>
<%= link_to 'New tutorial', new_tutorial_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
  
  <% if @tutorials %>
    <% @tutorials.each do |tutorial| %>
      <tr>
        <td><%= tutorial.title %></td>
        <td><%= tutorial.text %></td>
        <td><%= link_to 'Show', tutorial_path(tutorial) %></td>
        <td><%= link_to 'Edit', edit_tutorial_path(tutorial) %></td>
        <td><%= link_to 'Destroy', tutorial_path(tutorial),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td>No tutorials</td>
    </tr>
  <% end %>